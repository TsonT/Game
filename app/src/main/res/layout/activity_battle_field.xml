<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grass"
    android:orientation="vertical"
    tools:context=".BattleField">


    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/view_Confetti"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_winner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="WINNER: "
        android:textColor="@color/textWinner"
        android:textSize="30dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/linearLayoutTextBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_versus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Bot Vs. Bot"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Waiting For Opponent..."
            android:textSize="20dp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table_opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/opponentTable"
        android:foregroundGravity="center"
        android:gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TableLayout
        android:id="@+id/table_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/playerTable"
        android:foregroundGravity="center"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_Info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:enabled="false"
        android:foregroundGravity="center"
        android:text="Unit Info" />

</LinearLayout>